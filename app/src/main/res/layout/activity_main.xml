                android:textAlignment="textEnd" />

        </LinearLayout>

        <!-- 厚重大比目魚 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="厚重大比目魚160元"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/spinner7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:entries="@array/num"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <!-- 黑胡椒鮮蝦排 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="黑胡椒鮮蝦排160元"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/spinner8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:entries="@array/num"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <!-- 厚重豬排 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food91"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="厚重豬排　　160元"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/spinner9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:entries="@array/num"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <!-- 香辣厚豬排 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="香辣厚豬排　170元"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/spinner10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:entries="@array/num"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <!-- 厚重牛排 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
